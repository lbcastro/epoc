<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/oscillation_relative1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/party_confetti"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Concentration" >

    <RelativeLayout
        android:id="@+id/oscillation_relative2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <LinearLayout
            android:id="@+id/oscillation_graph"
            android:layout_width="550dp"
            android:layout_height="250dip"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >
        </LinearLayout>

        <ProgressBar
            android:id="@+id/oscillation_progress_1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/oscillation_graph"
            android:layout_alignRight="@id/oscillation_graph"
            android:layout_below="@id/oscillation_graph"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="20dp"
            android:indeterminate="false"
            android:max="400" />

        <TextView
            android:id="@+id/oscillation_delta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/oscillation_graph"
            android:layout_below="@id/oscillation_graph"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="16dp"
            android:text="Delta"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/oscillation_theta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/oscillation_graph"
            android:layout_below="@id/oscillation_delta"
            android:text="Theta"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

        <ProgressBar
            android:id="@+id/oscillation_progress_2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/oscillation_graph"
            android:layout_alignRight="@id/oscillation_graph"
            android:layout_below="@id/oscillation_progress_1"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="5dp"
            android:indeterminate="false"
            android:max="400" />

        <TextView
            android:id="@+id/oscillation_alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/oscillation_graph"
            android:layout_below="@id/oscillation_theta"
            android:text="Alpha"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

        <ProgressBar
            android:id="@+id/oscillation_progress_3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/oscillation_graph"
            android:layout_alignRight="@id/oscillation_graph"
            android:layout_below="@id/oscillation_progress_2"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="5dp"
            android:indeterminate="false"
            android:max="400" />

        <TextView
            android:id="@+id/oscillation_beta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/oscillation_graph"
            android:layout_below="@id/oscillation_alpha"
            android:text="Beta"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

        <ProgressBar
            android:id="@+id/oscillation_progress_4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/oscillation_graph"
            android:layout_alignRight="@id/oscillation_graph"
            android:layout_below="@id/oscillation_progress_3"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="5dp"
            android:indeterminate="false"
            android:max="400" />

        <ProgressBar
            android:id="@+id/oscillation_refresh"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/oscillation_graph"
            android:layout_alignRight="@id/oscillation_graph"
            android:layout_below="@id/oscillation_progress_4"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="15dp"
            android:max="16" />

        <TextView
            android:id="@+id/refresh_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/oscillation_graph"
            android:layout_below="@id/oscillation_beta"
            android:layout_marginTop="13dp"
            android:text="Refresh"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/rock_my_world"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>